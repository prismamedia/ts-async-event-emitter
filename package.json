  },
  "main": "dist/lib/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "./node_modules/.bin/jest --verbose",
    "test-watch": "npm run test -- --watchAll",
    "build": "./node_modules/.bin/tsc -p ./tsconfig.prod.json",
    "prettier": "./node_modules/.bin/prettier --write \"**/*.ts\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
