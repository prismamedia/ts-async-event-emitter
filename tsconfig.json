{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "lib": ["es2018"],
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
