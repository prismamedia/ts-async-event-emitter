{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es2017", "esnext.asynciterable"],
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
